<body>
    <%- include('nav.ejs') %> 

    <h1><%= my_session.first_nm %> Welcome To Your
    <br>
    <%= my_session.from_department %> Portal    
    </h1>

    

    <!-- <h1>Employee Work Sheet</h1> -->


        <div class="con">
            <div class="CNP">
                <a href="/new_reg_sal"><button type="button">New Employee Work Sheet</button></a>
            </div>

        </div>

      
        
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>From</th>
                <th>To</th>
                <th>Basic Hours</th>
                <th>Days Absent</th>
                <th>Reason</th>
                <th>Regular Hours</th>
                <th>Overtime</th>
                <th>Action</th>
                
            </tr>
        </thead>

        <tbody>
            <% if(newSal.length) { for(var i = 0; i< newSal.length; i++) {%>
                <tr>
                    <td><%= newSal[i].emply_id %></td>
                    <td><%= newSal[i].first_nm + " " + newSal[i].last_nm %> </td>
                    <td><%= new Date(newSal[i].date_from).toLocaleDateString('fr-CA') %></td>
                    <td><%= new Date(newSal[i].date_to).toLocaleDateString('fr-CA') %></td>
                    <td><%= newSal[i].basic_hrs %></td>
                    <td><%= newSal[i].days_absent %></td>
                    <td><%=newSal[i].absent_id%></td>
                    <td><%=newSal[i].reg_hrs_wrkd %></td>
                    <td><%=newSal[i].ot_hrs %></td>
                    <td>
                        <a href="/edit_workSheet/edit/<%=newSal[i].payId%>" class="update">Edit</a>
                        <a href="/edit_workSheet/delete/<%=newSal[i].payId%>" class="delete">Delete</a>
                    </td>
                </tr>
            <% } %>
            <%
    
            }else{ %>
                <tr>
                    <td colspan="9" style="text-align: center;"><b>No New Work Sheet</b></td>
                </tr>
            <% } %>
        </tbody>

    </table>
               
   

</body>
